<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salilthip.mystoryapp.MainActivity">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="100dp">

        <RelativeLayout
            android:id="@+id/imageLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/profileImageBtn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@android:drawable/ic_menu_report_image" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/emailLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageLayer"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/emailTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Email :" />

            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailLayer"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/passwordTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Password :" />

            <EditText
                android:id="@+id/passwordEdt"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:lines="1"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:layout_below="@id/passwordLayer"
            android:layout_centerHorizontal="true"
            android:text="login" />
    </RelativeLayout>


</RelativeLayout>
